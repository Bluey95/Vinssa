<% unless cart.line_items.empty? %>
  <h2>Your Cart</h2>
  <table align="center" class="table mt-4 table-hover">
    <thead class="thead-dark">
    <tr>
      <th scope="col">Number</th>
      <th scope="col">Item</th>
      <th scope="col">Price</th>
    </tr>
    </thead>
    <%= render(@cart.line_items) %>
    <tr class="total-line ">
      <thead class="bg-info">
        <th colspan="2">Total</th>
        <th class="total-cell"><%= number_to_currency(cart.total_price, :unit => "Ksh", :separator => ".", :delimeter => " ", :format => "%u %n") %></th>
      </thead>
    </tr>
  </table>

  <%= button_to "Empty Cart", cart, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn btn-danger float-right" %>
  <%= button_to "Checkout", new_order_path, method: :get, class: "btn btn-success float-left" %>
<% end %>